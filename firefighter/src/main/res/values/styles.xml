<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="VictimFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="KeyLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ValueLabel" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ScreeningButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#FF555555</item>
        <item name="android:background">@drawable/screening_button</item>
    </style>

</resources>
